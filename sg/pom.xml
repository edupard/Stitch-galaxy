<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.stitchgalaxy</groupId>
  <artifactId>stitchgalaxy</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <appengine.target.version>1.9.7</appengine.target.version>

                <sg-data-version>1.0.0-SNAPSHOT</sg-data-version>
		<sg-common-version>1.0.0-SNAPSHOT</sg-common-version>
		<sg-cdn-version>1.0.0-SNAPSHOT</sg-cdn-version>
		<sg-manager-api-version>1.0.0-SNAPSHOT</sg-manager-api-version>
		<sg-manager-web-version>1.0.0-SNAPSHOT</sg-manager-web-version>

		<spring-version>4.0.6.RELEASE</spring-version>
                <spring-data-jpa-version>1.6.1.RELEASE</spring-data-jpa-version>
                <spring-boot-starter-data-jpa-version>1.1.4.RELEASE</spring-boot-starter-data-jpa-version>


		<junit-version>4.10</junit-version>
		<joda-version>2.3</joda-version>
		<joda-time-hibernate-version>1.3</joda-time-hibernate-version>
		<hibernate-version>4.3.6.Final</hibernate-version>
                <commons-dbcp-version>1.4</commons-dbcp-version>
                <hsqldb-version>1.8.0.10</hsqldb-version>
                <mysql-connector-java-version>5.1.31</mysql-connector-java-version>
                <log4j-version>1.2.17</log4j-version>
                <usertype.core-version>3.2.0.GA</usertype.core-version>

                <spring-security-version>3.2.1.RELEASE</spring-security-version>


  </properties>

	<dependencyManagement>
		<dependencies>
                        <dependency>
				<groupId>com.stitchgalaxy</groupId>
				<artifactId>sg-data</artifactId>
				<version>${sg-data-version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>


  <build>
      <pluginManagement>
          <plugins>
              <plugin>
                  <groupId>com.google.appengine</groupId>
                  <artifactId>appengine-maven-plugin</artifactId>
                  <version>${appengine.target.version}</version>
              </plugin>
          </plugins>
      </pluginManagement>
  </build>
  <modules>
    <module>stitchgalaxy-ear</module>
    <module>sg-data</module>
    <module>sg-rest-api</module>
  </modules>
</project>