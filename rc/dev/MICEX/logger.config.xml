<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4cxx:configuration debug="false" xmlns:log4cxx="http://jakarta.apache.org/log4cxx/">

	<appender name="Console" class="log4cxx.ConsoleAppender">
		<layout class="org.apache.log4cxx.PatternLayout">
			<param name="ConversionPattern" value="%d %p %c - %m%n"/>
		</layout>	    
	</appender>
	<appender name="File" class="log4cxx.RollingFileAppender">
		<param name="Append" value="true" />
		<param name="file" value="RC_MICEX_Feed.log"/>
		<rollingPolicy class="log4cxx.rolling.TimeBasedRollingPolicy">
			<param name="fileNamePattern" value="RC_MICEX_Feed-%d{yyyy-MM-dd}.log"/>
		</rollingPolicy>
    	<layout class="org.apache.log4cxx.PatternLayout">
			<param name="ConversionPattern" value="%d %p %c - %m%n" />
		</layout>
	</appender>
	<appender name="Async" class="log4cxx.AsyncAppender">
		<param name="BufferSize" value="100"/>
		<param name="Blocking" value="false"/>
		<param name="LocationInfo" value="true"/>

		<appender-ref ref="Console"/>
		<appender-ref ref="File" />
	</appender>

	<!-- log levels: all|debug|info|warn|error|fatal|off|null -->
	<logger name="FH.SYS">
	</logger>
	<logger name="FH.CFG">
	</logger>
	<logger name="FH.ALIVE">
	</logger>
	<logger name="FH.MD.TRADES">
	</logger>
	<logger name="FH.MD.SECURITIES">
	</logger>
	<logger name="FH.MD.USTRADES">
	</logger>
	<logger name="FH.MD.VOLUME">
	</logger>

	<logger name="TIBRV">
		<level value="DEBUG"/>
	</logger>
	<root>
		<appender-ref ref="Async" />
	</root>
  
</log4cxx:configuration>
