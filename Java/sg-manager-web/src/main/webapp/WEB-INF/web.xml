<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Stitch galaxy web manager</display-name>
    <!-- Spring context -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:spring/spring-context-*.xml
            /WEB-INF/spring/spring-security.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!-- Spring security -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- Spring servlet dispatcher -->
    <servlet>
        <servlet-name>mvc-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <multipart-config>
            <max-file-size>52428800</max-file-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                /WEB-INF/spring/spring-mvc-dispatcher-servlet.xml
            </param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>mvc-dispatcher</servlet-name>
        <url-pattern>/category/view/topLevel</url-pattern>
        <url-pattern>/category/add/topLevel</url-pattern>
        <url-pattern>/category/remove/topLevel</url-pattern>
        <url-pattern>/category/view</url-pattern>
        <url-pattern>/category/add</url-pattern>
        <url-pattern>/category/remove</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/loginfailed</url-pattern>        
        <url-pattern>/product/view</url-pattern>
        <url-pattern>/product/add</url-pattern>
        <url-pattern>/product/edit</url-pattern>
        <url-pattern>/product/remove</url-pattern>
        
        <url-pattern>/product/author/select</url-pattern>
        <url-pattern>/product/translator/select</url-pattern>
        <url-pattern>/product/author/remove</url-pattern>
        <url-pattern>/product/translator/remove</url-pattern>
        <url-pattern>/product/author/assign</url-pattern>
        <url-pattern>/product/translator/assign</url-pattern>
        
        <!--        <url-pattern>/logout</url-pattern>-->
        <url-pattern>/accessDenied</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/</url-pattern>
        <url-pattern></url-pattern>
        
        <url-pattern>/product/thumbnail/upload</url-pattern>
        <url-pattern>/product/thumbnail/remove</url-pattern>
        <url-pattern>/product/image/upload</url-pattern>
        <url-pattern>/product/image/remove</url-pattern>
        <url-pattern>/product/completeProduct/upload</url-pattern>
        <url-pattern>/product/completeProduct/remove</url-pattern>
        <url-pattern>/product/prototype/upload</url-pattern>
        <url-pattern>/product/prototype/remove</url-pattern>
        <url-pattern>/product/design/upload</url-pattern>
        <url-pattern>/product/design/remove</url-pattern>
    </servlet-mapping>
    

</web-app>
